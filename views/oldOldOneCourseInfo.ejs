<body>



    <div class="container-fluid-xxl bg-white p-0">
        <%- include("partials/preloader.ejs") -%>
        

        <!-- Navbar & Hero Start -->
        <div class="container-fluid-xxl position-relative p-0">
            
            <%- include("partials/navbar.ejs") -%>
            
            <div class="container-fluid-xxl py-5 hero-header-login mb-5">
                <div class="container-fluid my-5 py-5 px-lg-5">
                    <div class="row g-5 py-5">


                      <div class="row">

                          

                        <div id="portfolio" class="our-portfolio section col-lg-6">

                          <div class="wow fadeInLeft" data-wow-duration="1s" data-wow-delay="0.5s">
                 
                             <div style="margin: 0px auto; width: 70%; display: flex; justify-content: space-around; flex-wrap: wrap; align-items: center;">
                             <!-- flip-card-container -->
                                                                          
                                                   <div class="wow fadeInDown fadeEffect" data-wow-duration="1s" data-wow-delay="0.5s">
                                                       <!-- for a course that the student did not subscribe with yet -->
                                                     <div class="flip-card-container" style="--hue: 220">
                                                       <div class="flip-card">
                                                     
                                                         <div class="card-front">
                                                           <figure>
                                                             <div class="img-bg"></div>
                                                             <img src="/assets/img/cardBg.jpg" style="position: relative; left: 50px; scale: 1.5;"  alt="card">
                                                             <figcaption> سنة : <%= oneCourseDetails.educationalLevel %> / ترم : <%= oneCourseDetails.semester %> </figcaption>
                                                           </figure>
                                                     
                                                           <ul class="ulCourses">
                                                             <li class="liCourses courseName fw-bolder fs-5" style="color:#73C6D9; position: relative; bottom: 70px;">  <%= oneCourseDetails.courseName %> </li>
                                                             <li class="liCourses courseDescription fw-bolder fs-5" style="position: relative; bottom: 50px;">الوصف :  <%= oneCourseDetails.courseDescription %></li>
                                                             <li class="liCourses CourseLevel fw-bolder fs-5" style="position: relative; bottom: 50px;"> السنة الدراسية :  <%= oneCourseDetails.educationalLevel %> ثانوي</li>
                                                             <li class="liCourses CourseSemester fw-bolder fs-5" style="position: relative; bottom: 50px;">الترم :  <%= oneCourseDetails.semester %></li>
                                                             <li class="liCourses coursePrice fw-bolder fs-5" style="position: relative; bottom: 30px;">السعر :  <%=   oneCourseDetails.price   %>     جنيه مصري    </li>                 
                                                           </ul>
                                                         </div>
                                                     
                                                         <div class="card-back">
                                                           <figure>
                                                             <div class="img-bg"></div>
                                                             <img src="/assets/img/cardBg.jpg" style="position: relative; left: 50px; scale: 1.5;" alt="card">
                                                           </figure>
                                                     
                                                           <button class="buttonCourses course-subs" type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">احجز الآن</button>

                                                     
                                                           <div class="design-container">
                                                             <span class="design design--1"></span>
                                                             <span class="design design--2"></span>
                                                             <span class="design design--3"></span>
                                                             <span class="design design--4"></span>
                                                             <span class="design design--5"></span>
                                                             <span class="design design--6"></span>
                                                             <span class="design design--7"></span>
                                                             <span class="design design--8"></span>
                                                           </div>
                                                         </div>
                                                     
                                                       </div>
                 
                                           
                                                     </div>
                                                 </div>
                             
                             
                              </div>
                          </div>


                      </div>

                      



                  </div>
                </div>
            </div>
        </div>
        <!-- Navbar & Hero End -->

        

       


        




      




        
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">هل تريد الاشتراك الآن</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                سيتم الاشتراك الآن في كورس <%= oneCourseDetails.courseName %>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إغلاق</button>
                <button type="button" class="btn btn-primary"><a href="/myCoursesInfo/<%=oneCourseDetails.counter%>/subscribed">اشترك الآن</a></button>
              </div>
            </div>
          </div>
        </div>

        <!-- Back to Top -->
        <a href="#" class="btn back-to-top btn-lg btn-lg-square  pt-2"><i class="bi bi-arrow-up"></i></a>


    </div>
    <%- include("partials/footer.ejs") -%>
    </div>

