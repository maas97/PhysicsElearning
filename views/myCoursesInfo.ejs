<body>



    <div class="container-fluid-xxl bg-white p-0">
        <%- include("partials/preloader.ejs") -%>
        

        <!-- Navbar & Hero Start -->
        <div class="container-fluid-xxl position-relative p-0">
            
            <%- include("partials/navbar.ejs") -%>
            
            <div class="container-fluid-xxl py-5 hero-header-login mb-5">
                <div class="container-fluid my-5 py-5 px-lg-5">
                    <div class="row g-5 py-5">
                        <div class="container" >
                            <div class="row" style="direction: rtl;">
                              <div class="col-lg-5">
                                <% if (!user.isSubscriped) {%>
    
                                <div class="section-heading wow fadeInLeft"  data-wow-duration="1s" data-wow-delay="0.3s">
                                  <!-- <h6>اخر ما تمت</h6> -->
                                  <h4 class="p-2 fw-bold" style="direction: rtl;">أنت حاليا غير مشترك في أي من الكورسات</h4>
                                  <h5 class="p-2"> <em>اختر كورس من الكورسات للحجز</em></h5>
                                  <!-- <div class="line-dec"></div> -->
                                </div>
                              <% } else { %>
                                <div class="section-heading wow fadeInLeft"  data-wow-duration="1s" data-wow-delay="0.3s">
                                  <!-- <h6>اخر ما تمت</h6> -->
                                  <h5 class="p-2 fw-bold fs-2 m-3" style="position: relative; right: 20px; color: #0F2D40;"> <em>اختر كورس من الكورسات الآتية </em></h5>
                                  <!-- <div class="line-dec"></div> -->
                                </div>
                                <% } %>
                              </div>
                            </div>
                        </div>

                        <div class="row">

                          <div class="col-lg-6 text-center text-lg-start">    
                            <img class="img-fluid mrimg" style="margin-top: -190px;" src="/assets/img/1 copy.png" alt="">
                            <img class="img-fluid whiteBg" style="position: absolute; bottom: -35px; left: -35px; width: 50%; height:70%;" src="/assets/img/Solid_white.png" alt="">
                          </div>

                        <div id="portfolio" class="our-portfolio section col-lg-6">

                          <div class="wow fadeInLeft" data-wow-duration="1s" data-wow-delay="0.5s">
                 
                             <div style="margin: 0px auto; width: 70%; display: flex; justify-content: space-around; flex-wrap: wrap; align-items: center;">
                             <!-- flip-card-container -->
                           
                               <% if(Object.keys(availableCourses).length === 0){ %>
                                 <div style="text-align: center; color:blueviolet; font-size: 3rem;"> لم يتم إنشاء كورسات بعد </div>
                                 <% } else { %>
                                   <!-- <%= user.educationalLevel %> -->
                                         <% for (let availableCourse of availableCourses) { %>
                                             <% if( user.educationalLevel === availableCourse.educationalLevel ){%>
                                               
                                                   <div class="wow fadeInDown fadeEffect" data-wow-duration="1s" data-wow-delay="0.5s">
                                                   <% if (!availableCourse.isCurrentCourseSubscribed) { %>
                                                       <!-- for a course that the student did not subscribe with yet -->
                                                     <div class="flip-card-container" style="--hue: 220">
                                                       <div class="flip-card">
                                                     
                                                         <div class="card-front">
                                                           <figure>
                                                             <div class="img-bg"></div>
                                                             <img src="/assets/img/cardBg.jpg" style="position: relative; left: 50px; scale: 1.5;"  alt="card">
                                                             <figcaption> سنة : <%= availableCourse.educationalLevel %> / ترم : <%= availableCourse.semester %> </figcaption>
                                                           </figure>
                                                     
                                                           <ul class="ulCourses">
                                                             <li class="liCourses courseName fw-bolder fs-5" style="color:#73C6D9; position: relative; bottom: 70px;">  <%= availableCourse.courseName %> </li>
                                                             <li class="liCourses courseDescription fw-bolder fs-5" style="position: relative; bottom: 50px;">الوصف :  <%= availableCourse.courseDescription %></li>
                                                             <li class="liCourses CourseLevel fw-bolder fs-5" style="position: relative; bottom: 50px;"> السنة الدراسية :  <%= availableCourse.educationalLevel %> ثانوي</li>
                                                             <li class="liCourses CourseSemester fw-bolder fs-5" style="position: relative; bottom: 50px;">الترم :  <%= availableCourse.semester %></li>
                                                             <li class="liCourses coursePrice fw-bolder fs-5" style="position: relative; bottom: 30px;">السعر :  <%=   availableCourse.price   %>     جنيه مصري    </li>
                                                             <li class="liCourses coursePrice" >
                                                               <a class="fw-bolder fs-5" href="/myCoursesInfo/<%=availableCourse.counter%>" style="text-decoration: none; color: #73C6D9; position: relative; bottom: 20px;"> اشترك الآن</a>
                                                             </li>
                 
                                                           </ul>
                                                         </div>
                                                     
                                                         <div class="card-back">
                                                           <figure>
                                                             <div class="img-bg"></div>
                                                             <img src="/assets/img/cardBg.jpg" style="position: relative; left: 50px; scale: 1.5;" alt="card">
                                                           </figure>
                                                     
                                                           <button class="buttonCourses course-content">
                                                            <a href="/myCoursesInfo/<%=availableCourse.counter%>" style="text-decoration: none; color: white; font-weight: bolder; font-size: larger;">محتوى الكورس </a>
                                                          </button>
                                                     
                                                           <div class="design-container">
                                                             <span class="design design--1"></span>
                                                             <span class="design design--2"></span>
                                                             <span class="design design--3"></span>
                                                             <span class="design design--4"></span>
                                                             <span class="design design--5"></span>
                                                             <span class="design design--6"></span>
                                                             <span class="design design--7"></span>
                                                             <span class="design design--8"></span>
                                                           </div>
                                                         </div>
                                                     
                                                       </div>
                 
                                           
                                                     </div>
                                                 <% } else { %>
                                                       <!-- for a course a student did subscribe with -->
                 
                                                   <div class="flip-card-container" style="--hue: 220">
                                                     <div class="flip-card">
                                                   
                                                       <div class="card-front">
                                                         <figure>
                                                           <div class="img-bg"></div>
                                                           <img src="/assets/img/cardBg.jpg" style="position: relative; left: 50px; scale: 1.5;" alt="card">
                                                           <figcaption> سنة : <%= availableCourse.educationalLevel %> ثانوي / ترم : <%= availableCourse.semester %> </figcaption>
                                                         </figure>
                                                   
                                                         <ul class="ulCourses">
                                                           <li class="liCourses courseName fw-bolder fs-5" style="color:#73C6D9; position: relative; bottom: 110px;"> <br> <%= availableCourse.courseName %> </li>
                                                           <li class="liCourses courseDescription fw-bolder fs-5" style="position: relative; bottom: 50px;">الوصف :  <%= availableCourse.courseDescription %></li>
                                                           <li class="liCourses CourseLevel fw-bolder fs-5" style="position: relative; bottom: 50px;"> السنة الدراسية :  <%= availableCourse.educationalLevel %> ثانوي</li>
                                                           <li class="liCourses CourseSemester fw-bolder fs-5" style="position: relative; bottom: 50px;">الترم :  <%= availableCourse.semester %></li>
                                                           <li class="liCourses coursePrice fw-bolder fs-5" style="color:#73C6D9; position: relative; right: 10px;">تم الاشتراك اضغط لرؤية المحتوى   </li>
                                                         </ul>
                                                       </div>
                                                   
                                                       <div class="card-back">
                                                         <figure>
                                                           <div class="img-bg"></div>
                                                           <img src="/assets/img/cardBg.jpg" style="position: relative; left: 50px; scale: 1.5;" alt="card">
                                                         </figure>
                                                   
                                                         <button class="buttonCourses course-content">
                                                          <a href="/myCoursesInfo/<%=availableCourse.counter%>/courseList%>" style="text-decoration: none; color: white; font-weight: bolder; font-size: larger;">عرض محتوى الكورس</a>
                                                        </button>                                  
                                                         <div class="design-container">
                                                           <span class="design design--1"></span>
                                                           <span class="design design--2"></span>
                                                           <span class="design design--3"></span>
                                                           <span class="design design--4"></span>
                                                           <span class="design design--5"></span>
                                                           <span class="design design--6"></span>
                                                           <span class="design design--7"></span>
                                                           <span class="design design--8"></span>
                                                         </div>
                                                       </div>
                                                   
                                                     </div>
                 
                                         
                                                   </div>
                 
                 
                                                 <% } %>
                 
                                             <% } %>
                                     <% } %>
                                     
                                 <% } %>
                             </div>
                             
                             </div>
                         </div>
                     </div>


                        </div>

                      



                    </div>
                </div>
            </div>
        </div>
        <!-- Navbar & Hero End -->

        

       


        




      




        


        <!-- Back to Top -->
        <a href="#" class="btn back-to-top btn-lg btn-lg-square  pt-2"><i class="bi bi-arrow-up"></i></a>
    </div>
